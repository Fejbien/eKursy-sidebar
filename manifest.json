{
  "manifest_version": 3,
  "name": "eKursy Sidebar",
  "version": "0.1.0",
  "description": "Sidebar dla eKursy podobny jak był kiedyś",
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "action": {
    "default_title": "eKursy Sidebar",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://ekursy.put.poznan.pl/*",
    "http://ekursy.put.poznan.pl/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ekursy.put.poznan.pl/*",
        "http://ekursy.put.poznan.pl/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
